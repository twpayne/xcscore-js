{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "dist/types",
        "declarationMap": true,
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": true,
        "strict": true,
        "stripInternal": true,
        "target": "ES6"
    },
    "include": [
        "src/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "typedocOptions": {
        "excludeNotExported": true,
        "mode": "file",
        "out": "dist/docs"
    }
}